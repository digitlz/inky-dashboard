{
  "name": "inky-dashboard",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "capture": "node screencapture/capture.js",
    "capture-pi": "node screencapture/capture-pi.js",
    "write-screen": "python3 screenwrite/write.py",
    "run-python-server": "cd dist/inky-dashboard && bash -c 'exec -a pythonServer python -m SimpleHTTPServer 8123 &'",
    "kill-server": "kill -9 `ps -ef |grep SimpleHTTPServer |grep 8123 |awk '{print $2}'`",
    "capture-and-write-test": "npm run-s build && npm run run-python-server && sleep 2 && npm run-s capture && npm run-s kill-server && echo 'done'",
    "capture-and-write": "npm run-s build && npm run run-python-server && sleep 2 && npm run-s capture-pi && npm run write-screen && npm run-s kill-server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.2.0",
    "@angular/common": "~10.2.0",
    "@angular/compiler": "~10.2.0",
    "@angular/core": "~10.2.0",
    "@angular/forms": "~10.2.0",
    "@angular/localize": "~10.2.0",
    "@angular/platform-browser": "~10.2.0",
    "@angular/platform-browser-dynamic": "~10.2.0",
    "@angular/router": "~10.2.0",
    "@ng-bootstrap/ng-bootstrap": "^8.0.0",
    "bootstrap": "^4.5.0",
    "puppeteer": "^5.4.1",
    "puppeteer-core": "^5.4.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular/cli": "~10.2.0",
    "@angular/compiler-cli": "~10.2.0",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
